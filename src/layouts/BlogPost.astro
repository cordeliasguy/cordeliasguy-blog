---
import BaseHead from '../components/BaseHead.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import Body from '../components/Body.astro'
import Content from '../components/Content.astro'
import { IoArrowBack } from 'react-icons/io5'

export interface Props {
  content: {
    title: string
    description: string
    image?: string
  }
}

const {
  content: { title, description, image }
} = Astro.props
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} image={image} />
  </head>

  <Body>
    <Header />
    <main class="pt-[56px]">
      <Content className="pt-6">
        <div class="mb-8">
          {
            image && (
              <img
                class="border border-slate-300 dark:border-zinc-700 rounded-xl"
                width={720}
                height={360}
                src={image}
                alt=""
              />
            )
          }
        </div>
        <h1 class="text-3xl my-1 font-mplus">{title}</h1>
        <div>{description}</div>
        <hr class="border-top border-zinc-400 my-4" />
        <slot />
        <span
          class="underline underline-offset-2 hover:text-orange-500 decoration-orange-500 text-2xl"
        ></span>
        <div class="flex mt-16 text-xl font-mplus">
          <a
            href="/"
            class="text-orange-500 underline underline-offset-2 flex items-center gap-1 hover:text-zinc-900 dark:hover:text-zinc-300 hover:no-underline"
          >
            <IoArrowBack /> Back to posts</a
          >
        </div>
      </Content>
    </main>
    <Footer />
  </Body>
</html>
